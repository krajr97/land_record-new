<%- include('layout/header')  %>

         <div class="page-wrapper">
            <div class="content container-fluid">
               <div class="page-header">
                  <div class="row align-items-center">
                     <div class="col">
                        <h3 class="page-title">Edit Lohan</h3>
                        <ul class="breadcrumb">
                           <li class="breadcrumb-item"><a href="/lohan_list">Lohan List</a></li>
                           <li class="breadcrumb-item active">Edit Village (Lohan)</li>
                        </ul>
                     </div>
                  </div>
               </div>
               <div class="row">
                  <div class="col-sm-12">
                     <div class="card">
                        <div class="card-body">
                           <form action="/update_lohan/<%= lohan._id %>" method="post">
                              <div class="row">
                                 <div class="col-12">
                                    <h5 class="form-title"><span>Village Information</span></h5>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>Village Name</label>
                                       <select class="form-control" name="village_name">
                                          <option>Select Village Name</option>
                                          <option <%= (lohan.village_name ==='1') ? 'selected' :'' %> value="1">Lohan</option>
                                          <option <%= (lohan.village_name === '2') ? 'selected' :'' %> value="2">lohan</option>
                                          <option <%= (lohan.village_name === '3') ? 'selected' :'' %> value="3">Lutaut</option>
                                          <option <%= (lohan.village_name === '4') ? 'selected' :'' %> value="4">Nath Nagar</option>
                                       </select>
                                    </div>
                                    <% if(errors && errors.village_name){ %>
                                       <span class="text-danger"><%= errors.village_name.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>Khata</label>
                                       <input type="text" class="form-control" value="<%= lohan.khata  %>" placeholder="Enter Khata" name="khata">
                                    </div>
                                    <% if(errors && errors.khata){ %>
                                       <span class="text-danger"><%= errors.khata.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>Keshera</label>
                                       <input type="text" class="form-control" value="<%= lohan.keshera  %>" placeholder="Enter Keshera" name="keshera">
                                    </div>
                                    <% if(errors && errors.keshera){ %>
                                       <span class="text-danger"><%= errors.keshera.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>Acre</label>
                                       <input type="text" class="form-control" value="<%= lohan.acre  %>" placeholder="Enter Acre" name="acre">
                                    </div>
                                    <% if(errors && errors.acre){ %>
                                       <span class="text-danger"><%= errors.acre.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>Dismil</label>
                                       <input type="text" class="form-control" value="<%= lohan.dismil  %>" placeholder="Enter Dismil" name="dismil">
                                    </div>
                                    <% if(errors && errors.dismil){ %>
                                       <span class="text-danger"><%= errors.dismil.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>Old Property Holder</label>
                                       <input type="text" class="form-control" value="<%= lohan.old_property_holder  %>" placeholder="Enter Old property holder" name="old_property_holder">
                                    </div>
                                    <% if(errors && errors.old_property_holder){ %>
                                       <span class="text-danger"><%= errors.old_property_holder.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>North</label>
                                       <input type="text" class="form-control" value="<%= lohan.north  %>" placeholder="Enter North" name="north">
                                    </div>
                                    <% if(errors && errors.north){ %>
                                       <span class="text-danger"><%= errors.north.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>South</label>
                                       <input type="text" class="form-control" value="<%= lohan.south  %>" placeholder="Enter South" name="south">
                                    </div>
                                    <% if(errors && errors.south){ %>
                                       <span class="text-danger"><%= errors.south.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>East</label>
                                       <input type="text" class="form-control" value="<%= lohan.east  %>" placeholder="Enter East" name="east">
                                    </div>
                                    <% if(errors && errors.east){ %>
                                       <span class="text-danger"><%= errors.east.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>West</label>
                                       <input type="text" class="form-control" value="<%= lohan.west  %>" placeholder="Enter West" name="west">
                                    </div>
                                    <% if(errors && errors.west){ %>
                                       <span class="text-danger"><%= errors.west.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>Jamabandi</label>
                                       <input type="text" class="form-control" value="<%= lohan.jamabandi  %>" placeholder="Enter Jamabandi" name="jamabandi">
                                    </div>
                                    <% if(errors && errors.jamabandi){ %>
                                       <span class="text-danger"><%= errors.jamabandi.msg  %></span>
                                    <% } %>
                                 </div>
                                 <div class="col-12 col-sm-3">
                                    <div class="form-group">
                                       <label>New Property Holder</label>
                                       <input type="text" class="form-control" value="<%= lohan.new_property_holder  %>" placeholder="Enter New Property Holder" name="new_property_holder">
                                    </div>
                                    <% if(errors && errors.new_property_holder){ %>
                                       <span class="text-danger"><%= errors.new_property_holder.msg  %></span>
                                    <% } %>
                                 </div>  
                                 <div class="form-group col-md-12">
                                    <label>Remarks</label>  
                                    <textarea name="remarks" id="Remarks" class="textarea"><%= lohan.remarks  %></textarea>
                                    <% if(errors && errors.remarks){ %>
                                       <span class="text-danger"><%= errors.remarks.msg  %></span>
                                    <% } %>
                                 </div>                        
                                                                                             
                                 <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                 </div>
                              </div>
                           </form>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <%- include('layout/footer')  %>